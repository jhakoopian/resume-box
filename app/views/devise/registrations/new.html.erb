<div class="container">
  <h2>Sign Up</h2>
  <br>
  <hr>
    <div class="container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row">
        <%= devise_error_messages! %>
      </div>
      <br>
      <div class="row">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'border col-md-3 col-sm-4 col-xs-8', autofocus: true %>
      </div>
      <br>
      <div class="row">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> character minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'border col-md-3 col-sm-4 col-xs-8' %>
      </div>
      <br>
      <div class="row">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'border col-md-3 col-sm-4 col-xs-8' %>
      </div>
      <br>
      <div class="row">
        <%= f.submit "Sign Up", class: 'button medium' %>
      </div>
    <% end %>
  </div>
</div>
