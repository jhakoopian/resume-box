<div class="container">
  <h1>New Resume</h1>
  <br>
  <hr>
  <div class="container">
    <%= form_for(@resume, multipart: true) do |f| %>
      <div class="row">
        <p><strong>Resume Name</strong></p>
        <%= f.text_field :name, class: 'border col-md-3 col-sm-4 col-xs-8', placeholder: "Enter a name for your resume" %>
      </div>
      <br>
      <div class="row">
        <p><strong>Attached File</strong></p>
        <%= f.file_field :document %>
      </div>
      <br>
      <div class="row">
        <%= f.submit "Save", class: 'button' %>
      </div>
    <% end %>
  </div>
</div>
