<div class="container">
  <h1>Upload Resume</h1>
  <br>
  <div class="container">
    <%= form_for(@resume, multipart: true) do |f| %>
      <div class="row">
        <%= f.text_field :name, class: 'col-md-4 col-xs-12', placeholder: "Enter a name for your resume" %>
      </div>
      <br>
      <div class="row">
        <%= f.file_field :document %>
      </div>
      <br>
      <div class="row">
        <%= f.submit "Save", class: 'btn btn-primary' %>
        <%= link_to 'Back', resumes_path, class: 'btn btn-danger' %>
      </div>
  <% end %>
  </div>
</div>
