<div class="container">
  <h1>Resumes</h1>
  <br>
  <div class="row">
    <div class="col-md-2 col-xs-6"><p><strong>Resume Name</strong></p></div>
    <div class="col-md-3 col-xs-6"><p><strong>File Name</strong></p></div>
    <div class="col-md-1 col-xs-6"><p><strong>File Size</strong></p></div>
    <div class="col-md-2 col-xs-6"><p><strong>Last Modified</strong></p></div>
  </div>
  <% @resumes.each do |resume| %>
    <div class="row">
      <div class="col-md-2 col-xs-6"><p><%= link_to resume.name, "#{resume.document}", target: ':_blank' %></p></div>
      <div class="col-md-3 col-xs-6"><p><%= resume.document_file_name %></p></div>
      <div class="col-md-1 col-xs-6"><p><%= number_to_human_size(resume.document_file_size) %></p></div>
      <div class="col-md-2 col-xs-6">
        <% if resume.updated_at > Time.now.beginning_of_day %>
          <p><%= "#{time_ago_in_words(resume.updated_at)} ago" %></p>
        <% else %>
          <p><%= "On #{resume.updated_at.strftime("%b %d, %Y")}" %></p>
        <% end %>
      </div>
      <div class="col-md-3 col-xs-6">
        <%= link_to "Edit", edit_resume_path(resume), class: 'button' %>
        <div class="button">Share</div>
        <%= link_to "Delete", resume, method: :delete, class: 'button delete', data: { confirm: 'Are you sure you want to delete this topic?' } %>
      </div>
    </div>
  <% end %>
  <br>
  <%= link_to "Upload Resume", new_resume_path, class: 'btn btn-primary' %>
</div>
