<div class="container">
  <h1><%= @message.subject %></h1>
  <%= link_to "Back", :back, class: 'button neutral' %>
  <br>
  <hr>
  <p><strong>To: </strong><%= @message.recipient %></p>
  <p><strong>Sent: </strong>
    <% if @message.created_at > Time.now.beginning_of_day %>
      <%= "#{time_ago_in_words(@message.created_at)} ago" %>
    <% else %>
      <%= "on #{@message.created_at.strftime("%b %d, %Y")}" %>
    <% end %>
  </p>
  <p><strong>Body: </strong></p>
  <p><%= @message.body %></p>
  <%= link_to 'Delete', [@message.resume, @message], method: :delete, class: 'button delete', data: { confirm: 'Are you sure you want to delete this message? It will still appear in your inbox. Whomever you sent it to will still have it.' } %>
</div>
