<div class="container">
  <h1>New Message</h1>
  <br>
  <hr>
  <div class="container">
    <%= form_for [@resume, @message] do |f| %>
      <div class="row">
        <p><strong>Recipient</strong></p>
        <%= f.text_field :recipient, class: 'border col-md-3 col-sm-4 col-xs-8' %>
      </div>
      <div class="row">
        <p><strong>Subject</strong></p>
        <%= f.text_field :subject, class: 'border col-md-3 col-sm-4 col-xs-8' %>
      </div>
      <div class="row">
        <p><strong>Message</strong></p>
        <%= f.text_area :body, size: "46x10", class: 'border' %>
      </div>
      <br>
      <div class="row">
        <%= f.submit "Send", class: 'button save' %>
      </div>
    <% end %>
  </div>
</div>
